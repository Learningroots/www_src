<script type="text/javascript">

	//sign up
	$(function(){
		$('.mobile-menu-signup, .footer-link2, .home-page-join-the-club a.button-1').click(function(e){
			e.preventDefault();
			//close the popup and focus the input at the footer
			$('.mobile-menu-close').click();
			if(window.openNewsLetterPopup) {
				window.openNewsLetterPopup();
			}
		});
	});

	//opening and closing of mobile menu
	var $_mobile_opener = $('.header-logo a.burger-menu'),
		$_mobile_closer = $('.mobile-menu-close'),
		$_mobile_overlay = $('.mobile-menu-overlay'),
		$_mobile_menu = $('.mobile-menu');

	$_mobile_opener.click(function(e) {
		e.preventDefault();
		$_mobile_overlay.show();
		$_mobile_menu.addClass('mobile-menu-opened');
	});

	$('body').delegate( '.mobile-menu-close, .char-video-popup a', "click", function(e){
		e.preventDefault();
		$_mobile_overlay.add('.char-video-popup').fadeOut('fast', function(){ $(this).empty(); });
		$_mobile_menu.removeClass('mobile-menu-opened');
	});

	//sub menu
	var $_mobile_sub_menu = $('.has-sub-menus');
	$_mobile_sub_menu.find('> li > a').click(function(e) {
		var $this = $(this);
		var $itsLi = $this.closest('li');
		if($itsLi.hasClass('sub-menu-active')) {
			e.preventDefault();
			return false;
		};
		var $sub = $this.closest('li').find('.list');
		if($sub.length !=0 ) {
			e.preventDefault();
			$this.closest('li').add($_mobile_sub_menu).addClass('sub-menu-active');
			//add close btn
			$this.after(
				$('<span class="close-sub-menu closeBtn" title="Back to main menu">&times;</span>')
					.click(function(e){
						e.stopPropagation();
						$('.sub-menu-active').removeClass('sub-menu-active');
						$(this).remove();
					})
			)
		}
	});

	$_mobile_overlay.click(function(){
		$_mobile_closer.click();
	});

	//close menu when esc is pressed
	$(document).keydown(function(e) {
		if (e.keyCode == 27) $_mobile_closer.click();
	});

</script>







